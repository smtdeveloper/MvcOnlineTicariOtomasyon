@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<SalesMove>

@{
    ViewBag.Title = "EmployeeSales";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"> Departman / Personel Satış : @ViewBag.EmployeeName    </li>
</ol>


<table class="table table-hover m-2">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ürün </th>
            <th scope="col">Cari</th>
            <th scope="col">Birim Fiyat</th>
            <th scope="col">Adet</th>
            <th scope="col">Toplam Fiyat</th>

            <th scope="col">Tarih</th>
            <th scope="col">Yazdır</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.SalesMoveID</th>
            <td>@item.Product.ProductName</td>
            <td>@item.Concubine.ConcubineFirstName @item.Concubine.ConcubinesLastName </td>
            <td>@item.UnitPrice</td>
            <td>@item.Count</td>
            <td>@item.TotalPrice</td>
            <td>@item.Date</td>
            <td> <a href="#" class="btn btn-dark" >Yazdır</a> </td>
        
        </tr>
        }


</table>

