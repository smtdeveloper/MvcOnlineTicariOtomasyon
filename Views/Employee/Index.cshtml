@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Listesi  </li>
</ol>

<a href="/Employee/EmployeeAdd/" class="btn btn-primary">Personel Ekle</a>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="card border-dark  m-4 p-2" style="max-width: 24rem;">
            <div class="card-header">
                @item.EmployeeFirstName  @item.EmployeeLastName  /
                @if (item.IsDelete)
                {
                    <h6 class="bg-secondary" > Pasif </h6>
                }
                else
                {
                    <h6  class="bg-success" > Aktif </h6>
                }
            </div>
            <div class="card-body text-success">
                <h5 class="card-title">@item.Department.DepartmentName</h5>
                <p class="card-text">  </p>
                <a href="/Department/EmployeeSales/@item.EmployeeID" class="btn btn-dark">Satış</a>
                <a href="/Employee/EmployeeUpdate/@item.EmployeeID" class="btn btn-warning">Güncelle</a>
            </div>
        </div>

    }
</div>
