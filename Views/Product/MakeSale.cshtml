toplama örneği : 


<input type="text" id="txt1" onkeyup="sum();" />
+
<input type="text" id="txt2" onkeyup="sum();" />
=
<input type="text" id="txt3" readonly />

<script>

    function sum() {

        var sayi1 = document.getElementById('txt1').value;
        var sayi2 = document.getElementById('txt2').value;
        var result = parseInt(sayi1) + parseInt(sayi2);

        if (!isNaN(result)) {

            document.getElementById('txt3').value = result;

        }
    }



    function TotalPriceFind() {

        var count = document.getElementById('txtCount').value;
        var UnitPrice = document.getElementById('txtUnitPrice').value;
        var result = parseInt(count) * parseInt(UnitPrice);

        if (!isNaN(result)) {

            document.getElementById('txtTotalPrice').value = result;

        }

    }




</script>

